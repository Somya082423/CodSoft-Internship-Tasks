#include <iostream>
using namespace std;

int main()
{
   double FirstNum, SecondNum;
   char ArithOp;

   cout << "Enter first number:" ;
   cin >> FirstNum;
   
   cout << "Enter second number:" ;
   cin >> SecondNum;
   cout << "Enter the arithmetic operation to be performed ( + - * / ) :" ;
   cin >> ArithOp;

   if (ArithOp == '+') {
        cout << FirstNum << "+" << SecondNum << "=" << FirstNum+SecondNum;
   }
   else if (ArithOp == '-') {
        cout << FirstNum << "-" << SecondNum << "=" << FirstNum-SecondNum;
   }
   else if (ArithOp == '*') {
        cout << FirstNum << "*" << SecondNum << "=" << FirstNum*SecondNum;
   }
   else if (ArithOp == '/') {
        cout << FirstNum << "/" << SecondNum << "=" << FirstNum/SecondNum;
   }
   else{
         cout << "Invalid Input" ;
   }
}
